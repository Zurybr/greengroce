@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>


</div>

<div class="container">
    <div class="list-group">
        <a asp-controller="Home"
           asp-action="Download"
           class="list-group-item list-group-item-action btn btn-info">
            Descargar archivo ejemplo
        </a>
    </div>
</div>


<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <br/>
            <p>Sube el archivo frutas.csv:</p>
            <input type="file" name="files" multiple class=""/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>